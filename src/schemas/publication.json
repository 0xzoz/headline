{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "publication",
  "type": "object",
  "definitions": {
    "Comparator": {
      "type": "object",
      "properties": {
        "comparator": {
          "type": "string"
        },
        "value": {
          "type": "string"
        }
      }
    },
    "AccessControlCondition": {
      "type": "object",
      "properties": {
        "contractAddress": {
          "type": "string"
        },
        "standardContractType": {
          "type": "string"
        },
        "chain": {
          "type": "string"
        },
        "parameters": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "returnValueTest": {
          "$ref": "#/definitions/Comparator"
        }
      }
    },
    "Operator": {
      "type": "object",
      "properties": {
        "operator": {
          "enum": ["and", "or"]
        }
      }
    },
    "LitAccess": {
      "type": "object",
      "properties": {
        "encryptedSymmetricKey": {
          "type": "string"
        },
        "accessControlConditions": {
          "type": "array",
          "items": {
            "anyOf": [
              { "$ref": "#/definitions/AccessControlCondition" },
              { "$ref": "#/definitions/Operator" }
            ]
          }
        }
      }
    }
  },
  "properties": {
    "name": {
      "type": "string",
      "title": "name",
      "maxLength": 256
    },
    "about": {
      "type": "string",
      "title": "description",
      "maxLength": 1000
    },
    "draftAccess": {
      "$ref": "#/definitions/LitAccess"
    },
    "publishAccess": {
      "$ref": "#/definitions/LitAccess"
    }
  },
  "required": ["draftAccess", "publishAccess"]
}
